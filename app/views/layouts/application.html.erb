<!DOCTYPE html>
<html>
<head>
  <title>GroceryData</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= link_to 'Home', '/' %>

<% if current_customer %>
  Signed in as: <%= current_customer.name %> | <%= link_to 'Log Out', '/logout' %>
<% else %>
  <%= link_to 'Log In', '/login' %> | <%= link_to 'Sign Up', '/signup' %>
<% end %>

<%= yield %>

</body>
</html>
